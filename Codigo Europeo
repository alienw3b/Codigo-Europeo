      border-radius: 5px;
      cursor: pointer;
    }

    .start {
      background-color: #4CAF50;
      color: white;
    }

    .reset {
      background-color: #f44336;
      color: white;
    }

    .output {
      margin-top: 30px;
      background-color: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      display: inline-block;
      text-align: left;
    }

    .output h3 {
      margin-bottom: 5px;
      color: #555;
    }

    .window-result {
      margin-bottom: 20px;
    }

  </style>
